@{
    var customerName = "";
    var width = "";
    var depth = "";
    var numOfDrawers = "";
    var surfaceMaterial = "";
    var rushOrder = "";
    var date = System.DateTime.Now.ToString();
    var quoteAmount = "";
    var deskId = "";

    if (!IsPost)
    {
        if (!Request.QueryString["ID"].IsEmpty())
        {
            deskId = Request.QueryString["ID"];
            var db = WebMatrix.Data.Database.Open("MegaDeskWeb");
            var dbCommand = "SELECT * FROM Desk WHERE ID = @0";
            var row = db.QuerySingle(dbCommand, deskId);
            customerName = row.CustomerName;
            width = row.Width.ToString();
            depth = row.Depth.ToString();
            numOfDrawers = row.NumOfDrawers.ToString();
            surfaceMaterial = row.SurfaceMaterial;
            rushOrder = row.RushOrder.ToString();
            date = row.Date.ToString();
            quoteAmount = row.QuoteAmount.ToString();
        }
        else
        {
            Validation.AddFormError("No desk was selected.");
        }
    }

    if (IsPost)
    {
        Validation.RequireField("customerName", "You must enter a name");
        Validation.RequireField("width", "Width is required");
        Validation.RequireField("depth", "Depth is required");
        Validation.RequireField("numOfDrawers", "You haven't entered the number of drawers");
        Validation.RequireField("material", "You haven't entered a material");
        Validation.RequireField("rushOrder", "You haven't entered a rush order time");
        //Validation.RequireField("quoteAmount", "You haven't entered a note");

        customerName = Request.Form["customerName"];
        width = Request.Form["width"];
        depth = Request.Form["depth"];
        numOfDrawers = Request.Form["numOfDrawers"];
        surfaceMaterial = Request.Form["surfaceMaterial"];
        rushOrder = Request.Form["rushOrder"];

        // take out or get acutal amount
        quoteAmount = width + depth;

        if (Validation.IsValid())
        {
            var db = WebMatrix.Data.Database.Open("MegaDeskWeb");
            var updateCommand = "UPDATE Desk SET CustomerName=@0, Width=@1, Depth=@2, NumOfDrawers=@3, SurfaceMaterial=@4, RushOrder=@5, Date=@6, QuoteAmount=@7 WHERE Id=@8";
            db.Execute(updateCommand, customerName, width, depth, numOfDrawers, surfaceMaterial, rushOrder, date, quoteAmount, deskId);
            Response.Redirect("~/Desks");
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Desk</title>
    <style>
        .validation-summary-errors {
            border: 2px dashed red;
            color: red;
            font-weight: bold;
            margin: 12px;
        }
    </style>
</head>
<body>
    <h1>Edit Desk</h1>
    @Html.ValidationSummary()
    <p><a href="~/Desks">Return to desk listing</a></p>
    <form method="post">
        <fieldset>
            <legend>Desk Information</legend>

            <p>
                <label for="customerName">Customer Name:</label>
                <input id="customerName" type="text" name="customerName" value="@customerName" />
            </p>

            <p>
                <label for="width">Width:</label>
                <input id="width" type="text" name="width" value="@width" />
            </p>

            <p>
                <label for="depth">Depth:</label>
                <input id="depth" type="text" name="depth" value="@depth" />
            </p>

            <p>
                <label for="numOfDrawers">Number of Drawers:</label>
                <input id="numOfdrawers" type="text" name="numOfDrawers" value="@numOfDrawers" />
            </p>

            <p>
                <label for="surfaceMaterial">Surface Material:</label>
                <input id="surfaceMaterial" type="text" name="surfaceMaterial" value="@surfaceMaterial" />
            </p>

            <p>
                <label for="rushOrder">Rush Order:</label>
                <input id="rushOrder" type="text" name="rushOrder" value="@rushOrder" />
            </p>

            <p>@deskId</p>

            <input type="hidden" name="deskId" value="@deskId" />

            <p><input type="submit" name="buttonSubmit" value="Submit Changes" /></p>
        </fieldset>
    </form>
</body>
</html>